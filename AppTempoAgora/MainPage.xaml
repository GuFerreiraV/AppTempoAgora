<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTempoAgora.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button Text="Minha localização" Clicked="Button_Clicked_Location"/>
            <Label x:Name="lbl_coords"/>

                <Entry x:Name="txt_city"/>
            <Button Text="Buscar" Clicked="Button_Clicked_Search" />

            <Label x:Name="lbl_res" />


            <WebView x:Name="wv_map" HeightRequest="500" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
